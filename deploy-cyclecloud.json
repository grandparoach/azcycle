{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "outputs": {},
    "parameters": {
        "adminjbvmStorage": {
            "maxLength": 32,
            "type": "string",
            "defaultValue": "Standard_LRS",
            "metadata": {
              "description": "Type of storage for the Admin Jump Box VM: Premium_LRS or Standard_LRS"
            }
          },
          "cyclevmStorage": {
            "maxLength": 32,
            "type": "string",
            "defaultValue": "Standard_LRS",
            "metadata": {
              "description": "Type of storage for the Cycle VM: Premium_LRS or Standard_LRS"
            }
          },        
        "adminjbvmSize": {
            "maxLength": 36,
            "metadata": {
                "description": "VM Size for the Admin Jump Box"
            },
            "defaultValue": "Standard_D2_v3",
            "type": "string"
        },
        "cyclevmSize": {
            "maxLength": 36,
            "metadata": {
                "description": "VM Size for the CycleCloud server"
            },
            "defaultValue": "Standard_D3_v2",
            "type": "string"
        },
        "admin_subnet": {
            "maxLength": 36,
            "metadata": {
                "description": "Name of the subnet for the Admin Jump Box"
            },

            "type": "string"
        },
        "cycle_subnet": {
            "maxLength": 36,
            "metadata": {
                "description": "Name of the subnet for the CycleCloud Server"
            },

            "type": "string"
        },
       "cyclePortalPW": {
            "maxLength": 128,
            "metadata": {
                "description": "Cycle Portal Account Password"
            },
            "type": "securestring"
        },
        "cyclePortalAccount": {
            "maxLength": 128,
            "metadata": {
                "description": "Cycle Portal Account User Email Address"
            },
            "type": "securestring"
        },
        "cyclecloudAdminPW": {
            "maxLength": 128,
            "metadata": {
                "description": "Admin password to use for the CycleCloud application"
            },
            "type": "securestring"
        },
        "applicationSecret": {
            "maxLength": 128,
            "metadata": {
                "description": "Service Principal Application Secret"
            },
            "type": "securestring"
        },
        "applicationId": {
            "maxLength": 36,
            "metadata": {
                "description": "Service Principal Application ID"
            },
            "type": "securestring"
        },
        "tenantId": {
            "maxLength": 36,
            "metadata": {
                "description": "Azure tenant ID"
            },
            "type": "securestring"
        },
        "cycleDownloadURL": {
            "maxLength": 256,
            "metadata": {
                "description": "Cycle download URI"
            },
            "type": "securestring"
        },
        "cycleLicenseURL": {
            "maxLength": 256,
            "metadata": {
                "description": "SAS key to Cycle License blob"
            },
            "type": "securestring"
        },
        "rsaPublicKey": {
            "metadata": {
                "description": "The RSA public key to access the VMs."
            },
            "type": "string"
        },
        "vnetName": {
            "maxLength": 36,
            "metadata": {
                "description": "Name of the VNET to add the VMs in"
            },
            "type": "string"
        }
    },
    "resources": [
    {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[variables('adminjbNsgName')]",
        "apiVersion": "[variables('networkApiVersion')]",
        "location": "[variables('resourceLocation')]",
        "properties": {
            "securityRules": [
            {
                "name": "default-allow-ssh",
                "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "22",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Allow",
                "priority": 1000,
                "direction": "Inbound",
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
                }
            },
            {
                "name": "DenyAllVnetInbound",
                "properties": {
                "protocol": "*",
                "sourcePortRange": "*",
                "destinationPortRange": "*",
                "sourceAddressPrefix": "*",
                "destinationAddressPrefix": "*",
                "access": "Deny",
                "priority": 2000,
                "direction": "Inbound",
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
                }
            }
            ]
        },
        "dependsOn": []
        },
        {
        "type": "Microsoft.Network/networkSecurityGroups",
        "name": "[variables('cycleNsgName')]",
        "apiVersion": "[variables('networkApiVersion')]",
        "location": "[variables('resourceLocation')]",
        "properties": {
            "securityRules": [
            {
                "name": "AllowSecuredCyclePortalInBound",
                "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "443",
                "sourceAddressPrefix": "Internet",
                "destinationAddressPrefix": "VirtualNetwork",
                "access": "Allow",
                "priority": 2000,
                "direction": "Inbound",
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
                }
            },
            {
                "name": "AllowCyclePortalInBound",
                "properties": {
                "protocol": "Tcp",
                "sourcePortRange": "*",
                "destinationPortRange": "80",
                "sourceAddressPrefix": "Internet",
                "destinationAddressPrefix": "VirtualNetwork",
                "access": "Allow",
                "priority": 1000,
                "direction": "Inbound",
                "sourceAddressPrefixes": [],
                "destinationAddressPrefixes": []
                }
            }
            ]
        },
        "dependsOn": []
        },
        {
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('adminJbIPName')]",
        "apiVersion": "[variables('networkApiVersion')]",
        "location": "[variables('resourceLocation')]",
        "properties": {
            "publicIPAddressVersion": "IPv4",
            "publicIPAllocationMethod": "Static",
            "idleTimeoutInMinutes": 4,
            "dnsSettings": {
            "domainNameLabel": "[concat('adminjb', variables('namingInfix'))]"
            }
        },
        "dependsOn": []
        },
        {
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[variables('cycleIPName')]",
        "apiVersion": "[variables('networkApiVersion')]",
        "location": "[variables('resourceLocation')]",
        "properties": {
            "publicIPAddressVersion": "IPv4",
            "publicIPAllocationMethod": "Static",
            "idleTimeoutInMinutes": 4,
            "dnsSettings": {
            "domainNameLabel": "[concat('cycleserver', variables('namingInfix'))]"
            }
        },
        "dependsOn": []
        },

        {
            "apiVersion": "[variables('computeApiVersion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('adminjbNic'))]"
            ],
            "location": "[variables('resourceLocation')]",
            "name": "[variables('adminjbName')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('adminjbvmSize')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('adminjbNic'))]"
                        }
                    ]
                },
                "osProfile": {
                    "adminUsername": "cycleadmin",
                    "computerName": "[variables('adminjbName')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "keyData": "[parameters('rsaPublicKey')]",
                                    "path": "/home/cycleadmin/.ssh/authorized_keys"
                                }
                            ]
                        }
                    },
                    "secrets": []
                },
                "storageProfile": {
                    "dataDisks": [],
                    "imageReference": {
                        "offer": "CentOS",
                        "publisher": "OpenLogic",
                        "sku": "7.3",
                        "version": "latest"
                    },
                    "osDisk": {
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('adminjbvmStorage')]"
                        },
                        "osType": "Linux"
                    }
                }
            },
            "type": "Microsoft.Compute/virtualMachines"
        },
        {
            "apiVersion": "[variables('networkApiVersion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('adminjbNsgName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('adminJbIPName'))]"
            ],
            "location": "[variables('resourceLocation')]",
            "name": "[variables('adminjbNic')]",
            "properties": {
                "dnsSettings": {},
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "primary": true,
                            "privateIPAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('adminJbIPName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('admin_subnet'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('adminjbNsgName'))]"
                },
                "primary": true
            },
            "type": "Microsoft.Network/networkInterfaces"
        },
        {
            "apiVersion": "[variables('computeApiVersion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('cycleNic'))]"
            ],
            "location": "[variables('resourceLocation')]",
            "name": "[variables('cycleName')]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('cyclevmSize')]"
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('cycleNic'))]"
                        }
                    ]
                },
                "osProfile": {
                    "adminUsername": "cycleadmin",
                    "computerName": "[variables('cycleName')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "keyData": "[parameters('rsaPublicKey')]",
                                    "path": "/home/cycleadmin/.ssh/authorized_keys"
                                }
                            ]
                        }
                    },
                    "secrets": []
                },
                "storageProfile": {
                    "dataDisks": [
                        {
                            "caching": "ReadOnly",
                            "createOption": "Empty",
                            "diskSizeGB": 1023,
                            "lun": 0,
                            "managedDisk": {
                                "storageAccountType": "[parameters('cyclevmStorage')]" 
                            }
                        }
                    ],
                    "imageReference": {
                        "offer": "CentOS",
                        "publisher": "OpenLogic",
                        "sku": "7.3",
                        "version": "latest"
                    },
                    "osDisk": {
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "[parameters('cyclevmStorage')]"
                        },
                        "osType": "Linux"
                    }
                }
            },
            "resources": [
                {
                    "apiVersion": "[variables('computeApiVersion')]",
                    "dependsOn": [
                        "[variables('cycleName')]"
                    ],
                    "location": "[resourceGroup().location]",
                    "name": "InstallCycle",
                    "properties": {
                        "autoUpgradeMinorVersion": true,
                        "protectedSettings": {
                            "commandToExecute": "[variables('cycleInstallCommand')]"
                        },
                        "publisher": "Microsoft.Azure.Extensions",
                        "settings": {
                            "fileUris": "[variables('cycleInstallScript')]"
                        },
                        "type": "CustomScript",
                        "typeHandlerVersion": "2.0"
                    },
                    "type": "extensions"
                }
            ],
            "type": "Microsoft.Compute/virtualMachines"
        },
        {
            "apiVersion": "[variables('networkApiVersion')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('cycleNsgName'))]",
                "[resourceId('Microsoft.Network/publicIPAddresses', variables('cycleIPName'))]"
            ],
            "location": "[variables('resourceLocation')]",
            "name": "[variables('cycleNic')]",
            "properties": {
                "dnsSettings": {},
                "enableAcceleratedNetworking": false,
                "enableIPForwarding": false,
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "primary": true,
                            "privateIPAddressVersion": "IPv4",
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses', variables('cycleIPName'))]"
                            },
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('cycle_subnet'))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('cycleNsgName'))]"
                },
                "primary": true
            },
            "type": "Microsoft.Network/networkInterfaces"
        }
    ],
    "variables": {
        "adminjbNsgName": "admin-nsg",
        "adminjbName": "adminjb",
        "adminjbNic": "adminjb-nic",
        "adminJbIPName": "adminjb-ip",

        "computeApiVersion": "2017-03-30",
        "cycleInstallCommand": "[concat('python cyclecloud_install.py ', '--cyclePortalPW ', '\"', parameters('cyclePortalPW'), '\"', ' --cyclePortalAccount ', '\"', parameters('cyclePortalAccount'), '\"', ' --applicationSecret ', '\"', parameters('applicationSecret'), '\"', ' --applicationId ', '\"', parameters('applicationId'), '\"', ' --tenantId ', '\"', parameters('tenantId'), '\"', ' --downloadURL ', '\"', parameters('cycleDownloadURL'), '\"', ' --licenseURL ', '\"', parameters('cycleLicenseURL'),  '\"', ' --cyclecloudAdminPW ', '\"', parameters('cyclecloudAdminPW'), '\"')]",
        "cycleInstallScript": [
            "[uri(deployment().properties.templateLink.uri, 'cyclecloud_install.py')]"
        ],
        "cycleName": "cycleserver",
        "cycleNic": "cycle-nic",
        "cycleNsgName": "cycle-nsg",
        "cycleIPName": "cycle-ip",
        "namingInfix": "[toLower(take(uniqueString(resourceGroup().id), 6))]",
        "networkApiVersion": "2017-06-01",
        "resourceLocation": "[resourceGroup().location]"
    }
}

